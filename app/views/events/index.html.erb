<h1><%= pluralize(Event.count, "Event")%></h1>

<%= link_to "Add New Event", new_event_path %>
<ul>
  <% @events.each do |event| %>
  <li>
    <strong><%= link_to event.name, event %></strong>
    <p>
      <%= truncate(event.description, length:7) %>
    </p>
    <p>
    in <%= event.location %>: <%= format_price(event)%>
    </p>
    <p>
    starts at <%= event.starts_at %>
    </p>

  </li>
  <% end %>
</ul>
